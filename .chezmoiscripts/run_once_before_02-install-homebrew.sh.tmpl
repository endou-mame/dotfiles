#!/bin/bash
# chezmoi run_once script: Install Homebrew
# This script runs once per machine

set -euo pipefail

echo "üì¶ Installing Homebrew..."

# Install Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Setup Homebrew environment
test -d /home/linuxbrew/.linuxbrew && eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# „Ç§„É≥„Çπ„Éà„Éº„É´Á¢∫Ë™ç
if command -v brew &> /dev/null; then
    echo "‚úÖ Homebrew installed successfully"
    echo "Homebrew version: $(brew --version)"
else
    echo "‚ö†Ô∏è Homebrew installation may have failed"
    exit 1
fi

echo "‚úÖ Homebrew setup complete"
